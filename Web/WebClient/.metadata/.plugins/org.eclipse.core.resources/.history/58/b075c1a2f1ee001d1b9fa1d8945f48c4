	<meta charset="UTF-8">
	<title>Insert title here</title>
	<script type="text/javascript">
	/* 
		1. 변수 생성 > 값입력 > 타입 생성 (number, string)
		var a; 정의됮 않음
		let b; 
		a= 10; 타입설정 (number)
		b = "A" 타입설정 (string)
		ES5 이전 문법(var) >> 
		
		
		
	*/
	let name = 'kglim';
	function call(){
		let age = 20;
		console.log("당신의 이름은 : " + name + " 나이는 : " + age);
		document.write("당신의 이름은 : " + name + " 나이는 : " + age);
	} 
	
	let n; //초기화 되어 있지 않아요 (정의되지 않았다)
	console.log(n); //undefined
	n=100;
	// 사용하기 전에만 초기화 하시면 되요
	
	let i, j;
	i = 200;
	j = 200;
	let result = i+j;
	console.log(result);
	

	let intnum = 10; //정수
	let dnum = 12.345; //실수
	let flag = true; //boolean
	let str = null; //값이 없다
	let str2 ="ABC"; //문자열
	
	console.log(typeof(intnum)); //number
	console.log(typeof(dnum));   //number
	console.log(typeof(flag));   //boolean
	console.log(typeof(str));    //object
	console.log(typeof(str2));   //string
	
	//연산자
	//산술(+,-,*,/,%) , 논리 , 관계
	
	let num1 = 10;
	let num2 = 3;
	document.write((num1/num2) + "<br>"); // 실수범위
	document.write((num1%num2) + "<br>"); 
	
	// 관계 == (=== 값도 같고 타입도 같아야 함) ...
	let a = 3;
	let b = 5;
	console.log((a == b));
	console.log((a != b));
	console.log((a > b));
	
	
	</script>
</head>
<body>
	<button onclick="call()" > 변수확인</button>

