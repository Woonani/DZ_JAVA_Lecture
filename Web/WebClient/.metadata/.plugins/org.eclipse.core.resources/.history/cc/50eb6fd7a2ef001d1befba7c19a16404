<head>
	<meta charset="UTF-8">
	<title>Insert title here</title>
	<script type="text/javascript">
		/* 
		javascript 다양한 내장 객체 제공 : 사용방법 2가지 91. new 통해서 , 2. 이미생성된 객체 (그냥 사용0)
		*/
		let today = new Date();
		console.log(today);
		console.log(today.getFullYear());
		console.log(today.getMonth()+1); // 주의
		console.log(today.getDate());
		console.log(today.getHours());
		console.log(today.getMinutes());
		console.log(today.getSeconds());
		
		// 자바 Math.Random(); >> static 함수
		console.log(Math.random()); // 0 <= 범위 < 1
		console.log(parseInt(Math.random()*45)); 
		// javascript 로또 가능
		console.log(Math.round(3.5678)); // 정수부분 >> 4
		
	    with(document){
			write(str + "<br>");
			write(str.length + "<br>");
			write(str.charAt(2) + "<br>");
			write(str.indexOf("D") + "<br>");
			write(str.concat("홍길동") + "<br>");
	
		
		}
		
	</script>
