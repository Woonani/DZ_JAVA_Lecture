	<script type="text/javascript">
	$(document).ready(function(){
		  $("#display").click(function(){
		     const tag = $("<div><div>").html("<b>Hello world</b>");
		     console.log(tag);
		     $('#data').append(tag);
		  });

		});

	</script>
